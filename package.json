{
  "name": "schemamap",
  "version": "1.0.0",
  "description": "Map messy CSVs to Shopify/Stripe in 30 seconds",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @schemamap/web dev",
    "build": "pnpm -r build",
    "build:cf": "pnpm install && pnpm --filter @schemamap/engine build && pnpm --filter @schemamap/web build",
    "deploy": "wrangler pages deploy apps/web/out --project-name=schemamap",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "keywords": ["csv", "shopify", "stripe", "mapping", "data"],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.0.0"
}
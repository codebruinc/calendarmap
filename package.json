{
  "name": "schemamap",
  "version": "1.0.0",
  "description": "Map messy CSVs to Shopify/Stripe in 30 seconds",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @schemamap/web dev",
    "build": "pnpm -r build",
    "build:cf": "npm install && npm run build:engine && npm run build:web",
    "build:engine": "cd packages/engine && npm run build",
    "build:web": "cd apps/web && npm run build",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "keywords": ["csv", "shopify", "stripe", "mapping", "data"],
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.3.0",
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.0.0"
  },
  "packageManager": "pnpm@8.0.0"
}